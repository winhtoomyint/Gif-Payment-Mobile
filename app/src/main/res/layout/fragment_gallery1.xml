<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/custom_border">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_account_number_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Account Number"
                android:textColor="#ffffff"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_profile_textview"
                android:padding="8dp"
                android:text="15689021"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_account_number_header" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_divider_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.20"/>

            <ImageView
                android:id="@+id/iv_star_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_account_number"
                app:layout_constraintBottom_toTopOf="@id/et_username"
                app:layout_constraintEnd_toStartOf="@id/iv_star_2"
                android:src="@drawable/ic_star"
                android:visibility="invisible"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/iv_star_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_account_number"
                app:layout_constraintBottom_toTopOf="@id/et_username"
                app:layout_constraintEnd_toStartOf="@id/iv_star_3"
                android:src="@drawable/ic_star"
                android:visibility="invisible"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/iv_star_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_account_number"
                app:layout_constraintBottom_toTopOf="@id/et_username"
                app:layout_constraintEnd_toStartOf="@id/iv_star_4"
                android:src="@drawable/ic_star"
                android:visibility="invisible"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/iv_star_4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_account_number"
                app:layout_constraintBottom_toTopOf="@id/et_username"
                app:layout_constraintEnd_toStartOf="@id/iv_star_5"
                android:src="@drawable/ic_star"
                android:visibility="invisible"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/iv_star_5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_account_number"
                app:layout_constraintBottom_toTopOf="@id/et_username"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_star"
                android:visibility="invisible"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_name_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Name"
                android:textColor="#ffffff"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_account_number" />
            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_profile_textview"
                android:padding="8dp"
                android:text="Aung Htet"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_header" />

            <TextView
                android:id="@+id/tv_nrc_number_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="NRC Number"
                android:textColor="#ffffff"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_username" />

            <EditText
                android:id="@+id/et_nrc_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_profile_textview"
                android:padding="8dp"
                android:text="12/DaGaSa(N)123456"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nrc_number_header" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Phone"
                android:textColor="#ffffff"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_nrc_number" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_profile_textview"
                android:padding="8dp"
                android:text="097760"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone" />
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Mail"
                android:textColor="#ffffff"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_phone" />
            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_profile_textview"
                android:padding="8dp"
                android:text="aunghtetwho@gmail.com"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_email" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:id="@+id/layout_nrc"
                  android:layout_marginTop="16dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/et_email"
                  >
                  <ImageView
                      android:id="@+id/iv_nrc_front"
                      android:layout_width="wrap_content"
                      android:layout_height="100dp"
                      android:layout_marginStart="16dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginEnd="16dp"
                      android:scaleType="centerCrop"
                      android:layout_weight="1"
                      app:layout_constraintEnd_toStartOf="@+id/vertical_divider"
                      app:layout_constraintHorizontal_bias="0.0"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/tv_nrc_front"
                      app:srcCompat="@drawable/nrcfront" />
                  <ImageView
                      android:id="@+id/iv_nrc_back"
                      android:layout_width="wrap_content"
                      android:layout_height="100dp"
                      android:layout_marginStart="16dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginEnd="16dp"
                      android:scaleType="centerCrop"
                      android:layout_weight="1"
                      app:layout_constraintEnd_toStartOf="@+id/vertical_divider"
                      app:layout_constraintHorizontal_bias="0.0"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/tv_nrc_front"
                      app:srcCompat="@drawable/nrcfront" />
              </LinearLayout>
            <TextView
                android:id="@+id/tv_uaddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/lbl_address"
                android:textColor="#ffffff"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_nrc" />
            <EditText
                android:id="@+id/et_uaddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_profile_textview"
                android:padding="8dp"
                android:text="Yangon"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_uaddress" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="2"
              android:id="@+id/addlayout"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/et_uaddress"
              >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   >
                   <TextView
                       android:id="@+id/tv_state"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="16dp"
                       android:layout_marginTop="16dp"
                       android:layout_marginEnd="16dp"
                       android:text="State"
                       android:textColor="#ffffff"
                       style="@style/TextAppearance.AppCompat.Medium"
                       android:textSize="12sp"
                        />

                   <EditText
                       android:id="@+id/et_state"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="16dp"
                       android:layout_marginTop="4dp"
                       android:layout_marginEnd="16dp"
                       android:background="@drawable/shape_profile_textview"
                       android:padding="8dp"
                       android:text="Ygn"
                       android:textColor="@android:color/black"
                       />
               </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  >
                  <TextView
                      android:id="@+id/tv_city"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="16dp"
                      android:layout_marginTop="16dp"
                      android:layout_marginEnd="16dp"
                      android:text="City"
                      android:textColor="#ffffff"
                      style="@style/TextAppearance.AppCompat.Medium"
                      android:textSize="12sp"
                      />

                  <EditText
                      android:id="@+id/et_city"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="16dp"
                      android:layout_marginTop="4dp"
                      android:layout_marginEnd="16dp"
                      android:background="@drawable/shape_profile_textview"
                      android:padding="8dp"
                      android:text="City"
                      android:textColor="@android:color/black"
                      />
              </LinearLayout>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="2"

              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/addlayout"
              >
              <Button
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/edit_btn"
                  android:elevation="5dp"
                  android:shadowRadius="5"
                  android:layout_weight="1"
                  android:text="Edit"
                  android:layout_margin="16dp"
                  android:background="@drawable/shape_profile_textview"
                  />
              <Button
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/save_btn"
                  android:layout_weight="1"
                  android:text="Save"
                  android:elevation="5dp"
                  android:shadowRadius="5"
                  android:layout_margin="16dp"
                  android:visibility="gone"
                  android:background="@drawable/shape_profile_textview"
                  />
          </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>