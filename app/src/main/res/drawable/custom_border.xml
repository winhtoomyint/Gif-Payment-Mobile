<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#338373" />
            <stroke android:color="#fde171" android:width="4dp"/>

            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />

            <size
                android:width="300dp"
                android:height="500dp" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle" >
            <stroke android:color="#ec0000" android:width="1dp" />
            <size android:width="290dp" android:height="490dp" />
        </shape>
    </item>

</layer-list>
